{% extends 'base.html.twig' %}

{% block title %}Registro de Usuario
{% endblock %}

{% block stylesheets %}
	{{parent()}}
	<style>
		body {
			background-color: #f5f5f5;
			padding: 10px;
		}

		button[type="submit"] {
            margin-top:30px;
			display: block;
			width: 100%;
			padding: 10px;
			border: none;
			border-radius: 5px;
			background-color: #007bff;
			color: #fff;
			font-size: 16px;
			cursor: pointer;
		}

		button[type="submit"]:hover {
			background-color: #0069d9;
		}

 
	 
			.container {
				max-width: 100%;
			}
			button[type="submit"] {
				font-size: 14px;
			}
			input[type="text"],
			input[type="email"],
			input[type="password"] {
				font-size: 14px;
				padding: 8px;
				border-radius: 4px;
				border: 1px solid #ccc;
				width: 100%;
			}
			.form-group {
				margin-bottom: 10px;
			}
			label {
				font-size: 14px;
			}
			h2 {
				font-size: 24px;
			}
			p {
				font-size: 14px;
			}
			.btn-block {
				margin-top: 10px;
				margin-bottom: 10px;
			}
		
	</style>
{% endblock %}

{% block body %}
	<div class="container">
		<h2 class="my-4 ml-4">Regístrate</h2>
		{{ form_start(registration_form, {'attr': {'class': 'form'}}) }}
		<div class="form-group">
			{{ form_label(registration_form.name, 'Nombre') }}
			{{ form_widget(registration_form.name, {'attr': {'placeholder': 'Jorge'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(registration_form.lastname, 'Apellido') }}
			{{ form_widget(registration_form.lastname, {'attr': {'placeholder': 'García'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(registration_form.email, 'Correo') }}
			{{ form_widget(registration_form.email, {'attr': {'placeholder': 'tucorreo@example.com'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(registration_form.password, 'Contraseña') }}
			{{ form_widget(registration_form.password, {'attr': {'placeholder': 'Inserte su contraseña'}}) }}
			{{ form_widget(registration_form.roles, {'attr': {'style': 'display:none'}}) }}
		</div>
        <div class="form-group">
			<button type="submit" class="btn btn-primary">Registrar</button>
		</div>
		{{ form_end(registration_form) }}
		<p class="text-center mt-3">¿Ya tienes una cuenta? <a href="{{ path('app_login') }}">Iniciar sesión</a></p>
	</div>
{% endblock %}
 
